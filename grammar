# Lines starting with # are comments
# EmptyString and Character are tokens generated by the scanner

# RegULAR expRESSION
Regexp => EmptyString | Union

Union => Sequence ( "|" Union )

# Sequence is concatentation of regular expressions
Sequence => Primary+ Quantifier?

Quantifier => ZeroOrOne | ZeroOrMore | OneOrMore

ZeroOrOne => "?"

ZeroOrMore => "*"

OneOrMore => "+"

Primary => Match | Group

Group => "(" Regexp ")"

Match => MatchCharacter | MatchAnyCharacter

MatchCharacter => Character

MatchAnyCharacter => "."
